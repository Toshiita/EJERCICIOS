<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/descripcion_imagen_perfil" />

        <ImageButton
            android:id="@+id/btnSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/seleccionar_imagen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pais"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/paises_array"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_jose_de_jesus_sarmiento"
            android:inputType="textPersonName|textCapWords"
            android:autofillHints="name"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefono"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_99765645"
            android:inputType="phone"
            android:autofillHints="phone"
            android:maxLength="8"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nota"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ej_conocido_desde_la_secundaria"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top|start"
            android:autofillHints="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnSalvarContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvar_contacto"
            android:backgroundTint="@color/green_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnContactosSalvados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contactos_salvados"
            android:backgroundTint="@color/blue_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>