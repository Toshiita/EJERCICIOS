<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewContactoLista"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:contentDescription="@string/descripcion_imagen_perfil" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textViewNombreLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jose de Jesus Sarmiento"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textViewTelefonoLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="504 99765643"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>